#!/bin/bash

if [[ $1 = "--full" ]]
then
  full=true
else
  full=false
fi

run()
{
  echo
  echo "*******************************"
  echo "* Starting dotfiles installer *"
  echo "*******************************"
  echo

  cd `dirname $0`
  install_essentials
  git_pull
  install_ohmyzsh
  switch_to_zsh
  symlink_files
  install_vim_plug

  echo "********************************"
  echo "* Done with dotfiles installer *"
  echo "********************************"
}

symlink_files() {
  echo "Symlinking dotfiles..."
  files=(
  XCompose
  Xmodmap
  aprc
  config/awesome/rc.lua
  fluxbox
  gemrc
  gitconfig
  iex.exs
  irbrc
  oh-my-zsh/custom/plugins/zsh-syntax-highlighting
  oh-my-zsh/plugins/lasseebert-common
  oh-my-zsh/themes/lasseebert-remote.zsh-theme
  oh-my-zsh/themes/lasseebert.zsh-theme
  profile
  pryrc
  tmux.conf
  tool-versions
  vim/autoload/plug.vim
  vim/config
  vimrc
  xbindkeysrc
  zshenv
  zshrc
  )
  for file in "${files[@]}"
  do
    symlink "`pwd`/$file" "$HOME/.$file"
  done

  mkdir -p "$HOME/.config"
  symlink "$HOME/.vim" "$HOME/.config/nvim"
  symlink "$HOME/.vimrc" "$HOME/.config/nvim/init.vim"

  echo
}

symlink() {
  file_path=$1
  link_path=$2
  link_dir=`dirname $link_path`

  if [ ! -d $link_dir ]
  then
    mkdir -pv $link_dir
  fi

  if [ -L $link_path ]
  then
    if [ "`readlink $link_path`" != "$file_path" ]
    then
      rm -rfv $link_path
      ln -sv $file_path $link_path
    else
      echo " [ OK ] $link_path"
    fi
  else
    if [ -a $link_path ]
    then
      mv $link_path $link_path.bak
    fi
    ln -sv $file_path $link_path
  fi
}

switch_to_zsh() {
  echo "Checking if zsh is used"
  result=$(cat /etc/passwd | grep `whoami` | grep `which zsh`)
  if [ "$result" = "" ]
  then
    echo " [ NO ]"
    chsh -s `which zsh`
    echo " Changed shell to `which zsh`"
  else
    echo " [ OK ] `which zsh`"
  fi
  echo
}

install_ohmyzsh() {
  echo Checking for oh-my-zsh...
  if [ ! -f ~/.oh-my-zsh/oh-my-zsh.sh ]
  then
    echo " Installing oh-my-zsh..."
    curl -L https://github.com/robbyrussell/oh-my-zsh/raw/master/tools/install.sh | sh
  else
    echo " [ OK ] Installed"
  fi
  echo
}

git_pull()
{
  echo "Updating repo..."

  echo " git pull"
  git pull

  echo
}


install_essentials()
{
  echo "Checking for essential packages..."

  if $full
  then
    packages=( git zsh vim-gnome libffi-dev libssl-dev zlib1g-dev libreadline-dev libxslt1-dev libxml2-dev libmagickwand-dev libsqlite3-dev libqtwebkit-dev curl fluxbox nodejs build-essential xfce4-power-manager nethogs )
  else
    packages=( git zsh curl )
  fi

  for package in "${packages[@]}"
  do
    install_package $package
  done
  echo
}

install_package()
{
  package=$1
  PKG_OK=$(dpkg-query -W --showformat='${Status}\n' $package|grep "install ok installed")
  if [ "" == "$PKG_OK" ]; then
    echo "$package not installed. Installing now."
    sudo apt-get --force-yes --yes install $package
  else
    echo " [ OK ] $package"
  fi
}

install_vim_plug() {
  [ -f vim/autoload/plug.vim ] || curl -fLo vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
}

run
