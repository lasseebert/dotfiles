#!/bin/bash

if [[ $1 = "--full" ]]
then
  full=true
else
  full=false
fi

run()
{
  echo
  echo "*******************************"
  echo "* Starting dotfiles installer *"
  echo "*******************************"
  echo

  cd `dirname $0`
  install_essentials
  git_pull
  switch_to_fish
  symlink_files
  install_vim_plug

  echo "********************************"
  echo "* Done with dotfiles installer *"
  echo "********************************"
}

symlink_files() {
  echo "Symlinking dotfiles..."
  files=(
  XCompose
  Xmodmap
  aprc
  config/awesome/rc.lua
  config/youtube-dl/config
  config/fish
  fluxbox
  gemrc
  gitconfig
  iex.exs
  irbrc
  profile
  pryrc
  tmux.conf
  tool-versions
  vim/autoload/plug.vim
  vim/config
  vimrc
  xbindkeysrc
  )
  for file in "${files[@]}"
  do
    symlink "`pwd`/$file" "$HOME/.$file"
  done

  mkdir -p "$HOME/.config"
  symlink "$HOME/.vim" "$HOME/.config/nvim"
  symlink "$HOME/.vimrc" "$HOME/.config/nvim/init.vim"

  echo
}

symlink() {
  file_path=$1
  link_path=$2
  link_dir=`dirname $link_path`

  if [ ! -d $link_dir ]
  then
    mkdir -pv $link_dir
  fi

  if [ -L $link_path ]
  then
    if [ "`readlink $link_path`" != "$file_path" ]
    then
      rm -rfv $link_path
      ln -sv $file_path $link_path
    else
      echo " [ OK ] $link_path"
    fi
  else
    if [ -a $link_path ]
    then
      mv $link_path $link_path.bak
    fi
    ln -sv $file_path $link_path
  fi
}

switch_to_fish() {
  echo "Checking if fish is used"
  result=$(cat /etc/passwd | grep `whoami` | grep `which fish`)
  if [ "$result" = "" ]
  then
    echo " [ NO ]"
    chsh -s `which fish`
    echo " Changed shell to `which fish`. Log out and in for changes to take effect"
  else
    echo " [ OK ] `which fish`"
  fi
  echo
}

git_pull()
{
  echo "Updating repo..."

  echo " git pull"
  git pull

  echo
}


install_essentials()
{
  echo "Checking for essential packages..."

  if $full
  then
    packages=( git fish vim-gnome libffi-dev libssl-dev zlib1g-dev libreadline-dev libxslt1-dev libxml2-dev libmagickwand-dev libsqlite3-dev libqtwebkit-dev curl fluxbox nodejs build-essential xfce4-power-manager nethogs )
  else
    packages=( git fish curl )
  fi

  for package in "${packages[@]}"
  do
    install_package $package
  done
  echo
}

install_package()
{
  package=$1
  PKG_OK=$(dpkg-query -W --showformat='${Status}\n' $package|grep "install ok installed")
  if [ "" == "$PKG_OK" ]; then
    echo "$package not installed. Installing now."
    sudo apt-get --force-yes --yes install $package
  else
    echo " [ OK ] $package"
  fi
}

install_vim_plug() {
  [ -f vim/autoload/plug.vim ] || curl -fLo vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
}

run
